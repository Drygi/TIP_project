<Page x:Class="Client.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage"  Height="600" Width="800" Background="#00a1ce"  >
    <StackPanel>

        <TextBlock x:Name="pageText" FontSize="50" Margin="50"  Height="75"  Text="LOGOWANIE" TextAlignment="Center"/>
        <TextBlock x:Name="loginText" Text="Wpisz login" FontSize="20" Width="200"/>
        <TextBox x:Name="login" FontSize="20" Height="30" Width="200"/>
        <TextBlock x:Name="passwordText" Text="Wpisz hasło" FontSize="20" Height="30" Width="200" />
        <PasswordBox x:Name="password"  FontSize="20" Height="30" Width="200" Margin="300,0"/>
        <Button x:Name="loginButton" Content="Zaloguj się" Width="200" Padding="10" Margin="20" Click="loginButton_Click" />
        <TextBlock x:Name="registerClick" Text="Nie posiadam jeszcze konta" FontSize="15"  Width="200" Padding="10" Margin="60" MouseDown="registerClick_MouseDown" />
    </StackPanel>
</Page>
