<Page x:Class="Client.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      Height="600" Width="800" Background="#00a1ce" 
      Title="Menu">

    <DockPanel LastChildFill="True">
        <StackPanel HorizontalAlignment="Left">
            <TextBlock x:Name="showContact" Text="Kontakty" FontSize="30" Margin="10,50,10,0" />

            <ListBox x:Name="listBoxItems" Background="#00BFce" HorizontalAlignment="Left" Height="350" Margin="10,10,0,10" VerticalAlignment="Top" Width="130"
                 ItemsSource="{Binding}">
                <ListBox.ItemTemplate >
                    <DataTemplate>
                        <StackPanel  Orientation="Horizontal" >
                            <TextBlock Text="{Binding login}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button x:Name="callButton" Content="Zadzwoń" Width="150" Margin="0,20,0,0" Padding="10" Click="callButton_Click"/>

        </StackPanel>
        


    </DockPanel>
</Page>
