<Page x:Class="Client.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
       d:DesignHeight="300" d:DesignWidth="300"
      Title="RegisterPage"  Height="600" Width="800" Background="#00a1ce"  >

    <StackPanel>

        <TextBlock x:Name="pageText" FontSize="50" Margin="50"  Height="75"  Text="REJESTRACJA" TextAlignment="Center"/>
        <TextBlock x:Name="loginText" Text="Wpisz login" FontSize="20" Width="200"/>
        <TextBox x:Name="login" FontSize="20" Height="30" Margin="300,0"/>
        <TextBlock x:Name="passwordText" Text="Wpisz hasło" FontSize="20" Height="30" Width="200" />
        <PasswordBox x:Name="password"  FontSize="20" Height="30" Margin="300,0"/>
        <TextBlock x:Name="IPtext" Text="Wpisz adres IP" FontSize="20" Width="200"/>
        <TextBox x:Name="IP" FontSize="20" Height="30" Margin="300,0"/>
        <Button x:Name="registerButton" Content="Zarejestruj się" Width="200" Padding="10" Margin="300,20" Click="Button_Click"/>
        <TextBlock x:Name="loginClick" Text="Posiadam już konto" FontSize="15" Width="200" Padding="10" Margin="10" MouseDown="loginClick_MouseDown" />


    </StackPanel>

</Page>
